{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
			"@*": [
				"../source/src/*"
			],
            "@constants/*": ["constants/*"],
        }
    },
	"include": [
		"src/**/*"
	],
    "exclude": ["node_modules"],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    }
}
